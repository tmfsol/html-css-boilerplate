{
	"name": "html-css-boilerplate",
	"version": "1.0.0",
	"main": "./dist/main.js",
	"license": "MIT",
	"devDependencies": {
		"@babel/cli": "^7.24.1",
		"@babel/core": "^7.24.4",
		"@babel/node": "^7.23.9",
		"@babel/plugin-transform-runtime": "^7.24.3",
		"@babel/preset-env": "^7.24.4",
		"nodemon": "^3.1.0",
		"rimraf": "^5.0.5",
		"sass": "^1.77.8"
	},
	"scripts": {
		"sass": "sass --watch --style=compressed ./src/sass:./public/assets/css/",
		"dev": "yarn sass && nodemon --exec babel-node ./src/main.js",
		"build": "rimraf build && babel ./src -d ./dist",
		"start": "node ."
	}
}
